@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Log In Form</title>
    <style type="text/css">
        table
        {
            border: 1px solid black;       
        }
    </style>
</head>
<body>
    @{ Html.BeginForm(); }
    <table align="center">
        <tr>
            <th colspan="2">
                Login credentials:
            </th>
        </tr>
        <tr>
            <td style="text-align: right">
                <label for="username">
                    Username:</label>
            </td>
            <td >
                <input type="text" name="username" />
            </td>
        </tr>
        <tr>
            <td style="text-align: right">
                <label for="password">
                    Password:</label>
            </td>
            <td >
                <input type="password" name="password" />
            </td>
        </tr>
        <tr style="text-align: center">
            <td colspan="2" >
                <input type="submit" value="Log On" />
            </td>
        </tr>
    </table>
    <div style="text-align: center;">
        @Html.ActionLink("Forgot your password", "PasswordRecovery")
    </div>
    <div style="text-align: center">
        <h2>
            @Html.Encode(ViewData["ErrorDetails"])
        </h2>
    </div>
    @{ Html.EndForm(); }
</body>
</html>
